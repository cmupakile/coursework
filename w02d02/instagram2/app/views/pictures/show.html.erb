


<h1>SHOW</h1>

<div class="picture">
  <img src="<%= @picture.image.profile_size.url %>" />
    <p><%= @picture.user.name %></p>
    <p><%= @picture.caption %></p>
   <form action="<%= picture_path @picture %>" method="POST">
     <input type="submit" value="Delete Image">
     <input type="hidden" name="_method" value="DELETE">
     <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
   </form>



   <%= render "comments/form" , picture: @picture%>
   <%= render "likes/form" , picture: @picture%>
   <%= render "follows/form" , {user: @picture.user , return_to: picture_path(@picture)}%>
 </div>

 <hr>

 <div class="comment">

 <%  @picture.comments.reverse.each do |comm| %>

   <h2>  <%= comm.user.name %>
     <% if comm.user.pictures.first %>
       <img src=" <%= comm.user.pictures.first.image %>" alt="">
     <% end %>

   (<%= comm.user.comments.length %>) </h2>
   <h1>  <%= comm.body %> </h1>


   <% end %>

   <h3> likes <%=( @picture.likes.length )%></h3>
   <h3> followers <%=( @picture.user.followers.length) %> </h3>




</div>
